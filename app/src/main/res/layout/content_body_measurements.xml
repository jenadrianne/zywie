<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zywie.android.zywie.bodyMeasurements"
    tools:showIn="@layout/activity_body_measurements"
    android:background="@drawable/pic11">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:textSize="32dp"
        android:textColor="@android:color/white"
        android:text="Body Measurements"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@android:color/black"
            android:text="@string/body_measurement"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btn_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary"
            android:padding="10dp"
            android:text="Weight Measurements"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:id="@+id/btn_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary"
            android:padding="10dp"
            android:text="Height Measurements"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/btn_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary"
            android:padding="10dp"
            android:text="BMI Measurements"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>



</RelativeLayout>
